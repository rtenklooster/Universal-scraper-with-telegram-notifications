# Bot configuratie
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
DEFAULT_SCRAPE_INTERVAL_MINUTES=1

# Database configuratie
DATABASE_TYPE=mssql
#DATABASE_TYPE=sqlite

# Database configuratie voor SQLite
DATABASE_PATH=./data/multiscraper.db

# Database configuratie voor MSSQL
DATABASE_SERVER=your_server_name.database.windows.net
DATABASE_NAME=your_database_name
DATABASE_USERNAME=your_username
DATABASE_PASSWORD=your_password
DATABASE_PORT=1433

# Proxy configuratie
USE_ROTATING_PROXY=false
PROXY_URL=http://your-proxy-url

# Logging
LOG_LEVEL=info

# Sync configuratie
DB_SYNC_ENABLED=true
DB_SYNC_INTERVAL_HOURS=1
PRODUCT_SYNC_INTERVAL_HOURS=6
LOCAL_DB_PATH=./data/local.sqlite